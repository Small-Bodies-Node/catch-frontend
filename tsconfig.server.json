{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/server",
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "noEmit": false,
    "resolveJsonModule": true
  },
  "include": [
    "src/server/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
